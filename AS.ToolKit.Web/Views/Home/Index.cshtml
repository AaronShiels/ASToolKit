@{
    ViewBag.Title = "Applications Home";
    ViewBag.Section = "Applications";
}

@model AS.ToolKit.Web.ViewModels.ApplicationSelectionViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>@ViewBag.Title</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                @foreach (var application in Model.Applications)
                {
                    <a href="@Url.Action("Index", "Home", new {appId = application.Id})" class="list-group-item @((application.Id == Model.SelectedApplicationId)?"active":"")">
                        <div class="row">
                            <div class="col-md-2">
                                <i class="@application.IconCss icon-3x"></i>
                            </div>
                            <div class="col-md-10">
                                <h4 class="list-group-item-heading">@application.Name</h4>
                                <p class="list-group-item-text">@application.Description</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                @{
                    var mainApplication = Model.Applications.Single(a => a.Id == Model.SelectedApplicationId);
                    <div class="row">
                        <div class="col-md-3" style="text-align: center">
                            <h1><i class="@mainApplication.IconCss icon-4x"></i></h1>
                        </div>
                        <div class="col-md-9">
                            <h1>@mainApplication.Name</h1>
                            <hr/>
                            <p class="lead">@mainApplication.Description</p>
                        </div>
                        <div class="col-md-12">
                            @Html.Raw(mainApplication.Blurb)
                            <hr/>
                            <a href="@Html.Raw(mainApplication.UrlPath)" class="btn btn-primary btn-large pull-right">
                                <i class="icon-mail-forward"></i>
                                Launch App
                            </a>
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
</div>
