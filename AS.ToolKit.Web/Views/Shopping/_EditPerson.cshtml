@model AS.ToolKit.Web.ViewModels.EditShoppingPersonViewModel

@using (Html.BeginForm("EditPerson", "Shopping", FormMethod.Post, new {@class="form-horizontal"}))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit Person</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.PersonId)
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new {@class="control-label col-md-4"})
                <div class="col-md-8">
                    @Html.EditorFor(m => m.FirstName, new {@class="form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new {@class="control-label col-md-4"})
                <div class="col-md-8">
                    @Html.EditorFor(m => m.LastName, new {@class="form-control"})
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">
                <i class="icon-ok"></i>
                Save
            </button>
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Close
            </button>
            <button type="button" class="btn btn-danger" data-target="@Html.Raw(Url.Action("DeletePerson", "Shopping", new {personId = Model.PersonId}))">
                <i class="icon-remove"></i>
                Delete
            </button>
        </div>
    </div>
}
