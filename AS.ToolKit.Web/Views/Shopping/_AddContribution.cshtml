@model AS.ToolKit.Web.ViewModels.AddShoppingContributionViewModel

@using (Html.BeginForm("AddContribution", "Shopping", FormMethod.Post, new {@class="form-horizontal"}))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add Contribution</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.GroupId)
            @Html.HiddenFor(m => m.PersonId)
            <div class="form-group">
                <label class="control-label col-md-4">Person</label>
                <div class="col-md-8">
                    <label class="control-label control-label-detail">@Model.PersonName</label>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Amount, new {@class="control-label col-md-4"})
                <div class="col-md-8">
                    @Html.EditorFor(m => m.Amount, new {@class="form-control"})
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">
                <i class="icon-plus"></i>
                Create
            </button>
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Close
            </button>
        </div>
    </div>
}
