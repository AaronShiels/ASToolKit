@model AS.ToolKit.Web.ViewModels.EditShoppingContributionViewModel

@using (Html.BeginForm("EditContribution", "Shopping", FormMethod.Post, new {@class="form-horizontal"}))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit Contribution</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.ContrId)
            @Html.HiddenFor(m => m.GroupId)
            <div class="form-group">
                <label class="control-label col-md-4">Person</label>
                <div class="col-md-8">
                    <label class="control-label control-label-detail">@Model.PersonName</label>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Amount, new {@class="control-label col-md-4"})
                <div class="col-md-8">
                    @Html.EditorFor(m => m.Amount, new {@class="form-control"})
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">
                <i class="icon-ok"></i>
                Save
            </button>
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Close
            </button>
            <button type="button" class="btn btn-danger" data-target="@Html.Raw(Url.Action("DeleteContribution", "Shopping", new {contrId = Model.ContrId, groupId = Model.GroupId}))">
                <i class="icon-remove"></i>
                Delete
            </button>
        </div>
    </div>
    
    
}
