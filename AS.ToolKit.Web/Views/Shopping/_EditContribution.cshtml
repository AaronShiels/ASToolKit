@model AS.ToolKit.Web.Models.ShoppingContribution

@using (Html.BeginForm("EditContribution", "Shopping", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.GroupId)
    @Html.HiddenFor(m => m.PersonId)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>New Shopping Period</h3>
    </div>
    <div class="modal-body">
        <div class="control-group">
            <label class="control-label">
                Shopper
            </label>
            <div class="controls">
                <input type="text" value="@Model.ShoppingPerson.FirstName @Model.ShoppingPerson.LastName" disabled="disabled" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Contribution Amount ($)
            </label>
            <div class="controls">
                @Html.EditorFor(m => m.Amount)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-danger" data-target="@Url.Action("DeleteContribution", "Shopping", new {contributionId = Model.Id})">Remove</button>
        <button type="button" data-dismiss="modal" class="btn">Cancel</button>
    </div>
}
