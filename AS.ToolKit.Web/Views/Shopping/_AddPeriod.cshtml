@model AS.ToolKit.Web.ViewModels.AddPeriodViewModel

@using (Html.BeginForm("AddPeriod", "Shopping", FormMethod.Post, new {@class="form-horizontal"}))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add Interval</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.UserId)
            <div class="form-group">
                @Html.LabelFor(m => m.Start, new {@class="control-label col-md-4"})
                <div class="col-md-8">
                    @Html.EditorFor(m => m.Start, new {@class="form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.End, new {@class="control-label col-md-4"})
                <div class="col-md-8">
                    @Html.EditorFor(m => m.End, new {@class="form-control"})
                </div>
            </div>  
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">
                <i class="icon-remove"></i>
                Close
            </button>
            <button type="submit" class="btn btn-success">
                <i class="icon-plus"></i>
                Create
            </button>
        </div>
    </div>
    
    
}
