@{
    ViewBag.Title = "Shopping Calculator";
    ViewBag.Section = "Applications";
}

@using AS.ToolKit.Web.ViewModels
@model AS.ToolKit.Web.ViewModels.IndexViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>@ViewBag.Title</h1>
            <ol class="breadcrumb">
                <li class="active">Shopping Calculator</li>
            </ol>
        </div>
    </div>
    @Html.DisplayFor(m => m.Message)
    @Html.HiddenFor(m => m.UserId)
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default" style="max-height: 400px; overflow: auto">
                <div class="panel-heading">Shopping Intervals</div>
                <div class="list-group">
                    @Html.DisplayFor(m => m.Intervals)
                </div>
            </div>
            <button id="btnAddInterval" type="button" class="btn btn-primary col-md-12">
                <i class="icon-plus"></i>
                Add New Interval
            </button>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Shoppers</div>
                <div class="list-group">
                    @Html.DisplayFor(m => m.People)
                </div>
            </div>
            <button id="btnAddPerson" type="button" class="btn btn-primary col-md-12">
                <i class="icon-plus"></i>
                Add New Person
            </button>
        </div>
    </div>
</div>

<div id="divAddInterval" class="modal fade">
    <div class="modal-dialog">
        @Html.Partial("_AddInterval", new AddIntervalViewModel
            {
                UserId = Model.UserId,
                Start = Model.DefaultStartDateString,
                End = Model.DefaultEndDateString
            })
    </div>
</div>

<div id="divAddPerson" class="modal fade">
    <div class="modal-dialog">
        @Html.Partial("_AddPerson", new AddPersonViewModel
            {
                UserId = Model.UserId,
            })
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnAddInterval').click(function() {
                $('#divAddInterval').modal();
            });
            $('#btnAddPerson').click(function () {
                $('#divAddPerson').modal();
            });
        });
    </script>
}
